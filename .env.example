# ============================
# TELEGRAM
# ============================
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_ADMIN_ID=123456789
TELEGRAM_ADMIN_USERNAME=@your_username


# ============================
# PAIR FILTER
# ============================
# Min volume 24 jam (USDT) agar pair di-scan
MIN_VOLUME_USDT=2000000

# Max pair yang discan
MAX_USDT_PAIRS=200

# Refresh daftar pair setiap berapa jam
REFRESH_PAIR_INTERVAL_HOURS=24


# ============================
# SIGNAL SETTINGS
# ============================
# Tier minimum sinyal yg dikirim: A+, A, B
MIN_TIER_TO_SEND=A+

# Cooldown antar sinyal per pair (detik)
SIGNAL_COOLDOWN_SECONDS=600


# ============================
# RANGE STRATEGY SETTINGS
# ============================
# Range detection lookback (jumlah candle 5m)
RANGE_LOOKBACK=30

# Range minimal (%)
RANGE_MIN_PCT=0.003

# Range maksimal (%)
RANGE_MAX_PCT=0.015

# SL buffer (%)
SL_BUFFER_PCT=0.0015

# Take-profit RR multipliers
RR1=1.0
RR2=2.0
RR3=3.0

# === RANGE SETTINGS ===
RANGE_ENTRY_TF=5m
RANGE_USE_HTF_FILTER=true
RANGE_MAX_ENTRY_AGE_CANDLES=6
RANGE_MIN_RR_TP2=2.0
